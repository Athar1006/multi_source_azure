{
	"name": "PL_SQLSERVER",
	"properties": {
		"activities": [
			{
				"name": "TableNames",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
